<odoo>
  <data>
    <!-- FORM VIEW (HERENCIA) -->
    <record model="ir.ui.view" id="fidelizacion__clientes_form">
      <field name="name">fidelizacion.clientes.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">

        <xpath expr="//notebook" position="inside">
          <page string="Membresía">
            <group>
              <field name="codigo_socio"/>
              <field name="nivel_fidelidad"/>
            </group>
          </page>
        </xpath>

      </field>
    </record>


    <!-- TREE VIEW -->
  <record model="ir.ui.view" id="fidelizacion__clientes_list">
    <field name="name">fidelizacion.clientes.list</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_tree"/>
    <field name="arch" type="xml">

      <xpath expr ="//list/field[@name='phone']" position="before">
        <field name="nivel_fidelidad" string="Nivel de Fidelidad"/>
      </xpath>

      <!-- Aplicar decoración a toda la fila -->
      <xpath expr ="//list/field[@name='nivel_fidelidad']" position="attributes">
        <attribute name="decoration-info">nivel_fidelidad in ('Gold','Premium')</attribute>
      </xpath>

    </field>
  </record>



    <!-- KANBAN VIEW -->
    <record id="fidelizacion__clientes_kanban" model="ir.ui.view">
      <field name="name">fidelizacion.clientes.kanban</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.res_partner_kanban_view"/>
      <field name="arch" type="xml">

        <xpath expr="//div[@class='mb-1']/field[@name='display_name']" position="after">
          <div class="fw-bold">
            <field name="codigo_socio" string="Código de Socio"/>
          </div>
        </xpath>

      </field>
    </record>

  </data>
</odoo>
